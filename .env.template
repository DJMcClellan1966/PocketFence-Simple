# PocketFence Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=path/to/your/firebase-service-account-key.json
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id

# JWT Authentication
JWT_SECRET=your-secure-jwt-secret-key-at-least-32-characters-long
JWT_ISSUER=PocketFence
JWT_AUDIENCE=PocketFence-Users
JWT_EXPIRATION_MINUTES=1440

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs
STRIPE_BASIC_MONTHLY_PRICE_ID=price_your_basic_monthly_price_id
STRIPE_BASIC_ANNUAL_PRICE_ID=price_your_basic_annual_price_id
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_your_premium_monthly_price_id
STRIPE_PREMIUM_ANNUAL_PRICE_ID=price_your_premium_annual_price_id
STRIPE_PLATINUM_MONTHLY_PRICE_ID=price_your_platinum_monthly_price_id
STRIPE_PLATINUM_ANNUAL_PRICE_ID=price_your_platinum_annual_price_id
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_your_enterprise_monthly_price_id
STRIPE_ENTERPRISE_ANNUAL_PRICE_ID=price_your_enterprise_annual_price_id

# Optional: Database Connection (if using external database)
# DATABASE_CONNECTION_STRING=your_database_connection_string

# Optional: External Service API Keys
# OPENAI_API_KEY=your_openai_api_key_for_ai_features
# AZURE_COGNITIVE_SERVICES_KEY=your_azure_key_for_content_moderation