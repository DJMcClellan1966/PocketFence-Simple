<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PocketFence_Simple"
             x:Class="PocketFence_Simple.NetworkPage"
             x:DataType="local:NetworkPage"
             Title="Network">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Network Management" 
                   FontSize="Large" 
                   FontAttributes="Bold" 
                   Margin="0,0,0,20" />
            
            <!-- Hotspot Control -->
            <Frame BackgroundColor="LightBlue" Margin="0,0,0,20">
                <StackLayout>
                    <Label Text="Hotspot Control" FontSize="16" FontAttributes="Bold" />
                    
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <StackLayout Grid.Column="0">
                            <Label Text="Mobile Hotspot Status" />
                            <Label Text="{Binding HotspotStatus}" FontAttributes="Bold" TextColor="{Binding HotspotStatusColor}" />
                        </StackLayout>
                        
                        <Switch Grid.Column="1" IsToggled="{Binding IsHotspotEnabled}" VerticalOptions="Center" />
                    </Grid>
                    
                    <Entry Placeholder="Hotspot Name (SSID)" Text="{Binding HotspotSSID}" />
                    <Entry Placeholder="Password" Text="{Binding HotspotPassword}" IsPassword="True" />
                    
                    <Button Text="Apply Settings" 
                            Command="{Binding ApplyHotspotSettingsCommand}"
                            IsEnabled="{Binding IsNotBusy}" />
                </StackLayout>
            </Frame>
            
            <!-- Network Information -->
            <Frame BackgroundColor="LightGray" Margin="0,0,0,20">
                <StackLayout>
                    <Label Text="Network Information" FontSize="16" FontAttributes="Bold" />
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Text="Local IP:" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding LocalIPAddress}" />
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="Gateway:" FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding GatewayAddress}" />
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="DNS:" FontAttributes="Bold" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding DNSServers}" />
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="Connected:" FontAttributes="Bold" />
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding ConnectedDevicesCount}" />
                    </Grid>
                </StackLayout>
            </Frame>
            
            <!-- Traffic Statistics -->
            <Frame BackgroundColor="LightGreen" Margin="0,0,0,20">
                <StackLayout>
                    <Label Text="Traffic Statistics" FontSize="16" FontAttributes="Bold" />
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                            <Label Text="{Binding TotalDataTransferred}" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="Total Data" FontSize="12" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        
                        <StackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                            <Label Text="{Binding BlockedRequests}" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="Red" />
                            <Label Text="Blocked" FontSize="12" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        
                        <StackLayout Grid.Row="1" Grid.Column="0" HorizontalOptions="Center">
                            <Label Text="{Binding UploadSpeed}" FontSize="16" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="Upload" FontSize="12" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        
                        <StackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="Center">
                            <Label Text="{Binding DownloadSpeed}" FontSize="16" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="Download" FontSize="12" HorizontalTextAlignment="Center" />
                        </StackLayout>
                    </Grid>
                </StackLayout>
            </Frame>
            
            <!-- Network Actions -->
            <StackLayout>
                <Label Text="Network Actions" FontSize="16" FontAttributes="Bold" Margin="0,0,0,10" />
                
                <Button Text="Refresh Network Status" 
                        Command="{Binding RefreshNetworkCommand}" 
                        Margin="0,0,0,10" />
                        
                <Button Text="Restart Hotspot" 
                        Command="{Binding RestartHotspotCommand}" 
                        Margin="0,0,0,10" />
                        
                <Button Text="View Connection Log" 
                        Command="{Binding ViewConnectionLogCommand}" 
                        Margin="0,0,0,10" />
                        
                <Button Text="Export Traffic Report" 
                        Command="{Binding ExportTrafficReportCommand}" 
                        Margin="0,0,0,10" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>