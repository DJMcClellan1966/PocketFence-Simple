<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PocketFence_Simple"
             x:Class="PocketFence_Simple.MainPage"
             x:DataType="local:MainPage"
             Title="Dashboard">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <!-- Header -->
            <Label x:Name="WelcomeLabel" 
                   Text="Welcome to PocketFence-Simple"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   SemanticProperties.HeadingLevel="Level1" />

            <Label x:Name="SubtitleLabel"
                   Text="Parental Control Hotspot for All Devices"
                   FontSize="18"
                   HorizontalOptions="Center"
                   SemanticProperties.HeadingLevel="Level2" />

            <!-- Status Cards -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="20" RowSpacing="20">
                
                <!-- Hotspot Status Card -->
                <Frame Grid.Column="0" BackgroundColor="#E3F2FD" Padding="20">
                    <StackLayout Spacing="10">
                        <Label Text="ðŸ”¥ Hotspot Status" FontSize="16" FontAttributes="Bold" />
                        <Label x:Name="HotspotStatusLabel" Text="Disabled" FontSize="14" />
                        <Button x:Name="ToggleHotspotButton" 
                                Text="Enable Hotspot"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                Clicked="OnToggleHotspotClicked" />
                    </StackLayout>
                </Frame>

                <!-- Connected Devices Card -->
                <Frame Grid.Column="1" BackgroundColor="#E8F5E8" Padding="20">
                    <StackLayout Spacing="10">
                        <Label Text="ðŸ“± Connected Devices" FontSize="16" FontAttributes="Bold" />
                        <Label x:Name="DeviceCountLabel" Text="0 devices" FontSize="14" />
                        <Button Text="View Devices"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                Clicked="OnViewDevicesClicked" />
                    </StackLayout>
                </Frame>

            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="20" RowSpacing="20">
                
                <!-- Content Filter Card -->
                <Frame Grid.Column="0" BackgroundColor="#FFF3E0" Padding="20">
                    <StackLayout Spacing="10">
                        <Label Text="ðŸ›¡ï¸ Content Filter" FontSize="16" FontAttributes="Bold" />
                        <Label x:Name="FilterStatusLabel" Text="Active" FontSize="14" />
                        <Button Text="Configure Filter"
                                BackgroundColor="#FF9800"
                                TextColor="White"
                                Clicked="OnConfigureFilterClicked" />
                    </StackLayout>
                </Frame>

                <!-- Network Monitor Card -->
                <Frame Grid.Column="1" BackgroundColor="#F3E5F5" Padding="20">
                    <StackLayout Spacing="10">
                        <Label Text="ðŸ“Š Network Monitor" FontSize="16" FontAttributes="Bold" />
                        <Label x:Name="MonitorStatusLabel" Text="Stopped" FontSize="14" />
                        <Button x:Name="ToggleMonitorButton"
                                Text="Start Monitoring"
                                BackgroundColor="#9C27B0"
                                TextColor="White"
                                Clicked="OnToggleMonitorClicked" />
                    </StackLayout>
                </Frame>

            </Grid>

            <!-- Recent Activity -->
            <Frame BackgroundColor="#FAFAFA" Padding="20">
                <StackLayout Spacing="15">
                    <Label Text="ðŸ“‹ Recent Activity" FontSize="18" FontAttributes="Bold" />
                    <CollectionView x:Name="RecentActivityCollectionView" 
                                    HeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="local:ActivityItem">
                                <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
                                    <Label Grid.Column="0" 
                                           Text="{Binding Icon}" 
                                           FontSize="20" 
                                           VerticalOptions="Center" />
                                    <StackLayout Grid.Column="1" Spacing="2" Margin="10,0">
                                        <Label Text="{Binding Message}" FontSize="14" />
                                        <Label Text="{Binding Timestamp}" FontSize="12" TextColor="Gray" />
                                    </StackLayout>
                                    <Label Grid.Column="2" 
                                           Text="{Binding Status}" 
                                           FontSize="12" 
                                           VerticalOptions="Center"
                                           TextColor="{Binding StatusColor}" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- System Information -->
            <Frame BackgroundColor="#F5F5F5" Padding="20">
                <StackLayout Spacing="10">
                    <Label Text="â„¹ï¸ System Information" FontSize="18" FontAttributes="Bold" />
                    <Label x:Name="SystemInfoLabel" 
                           Text="Loading system information..." 
                           FontSize="12" 
                           TextColor="Gray" />
                </StackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>