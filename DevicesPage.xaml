<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:PocketFence_Simple.Models"
             xmlns:local="clr-namespace:PocketFence_Simple"
             x:Class="PocketFence_Simple.DevicesPage"
             x:DataType="local:DevicesPage"
             Title="Devices">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Connected Devices" 
                   FontSize="Large" 
                   FontAttributes="Bold" 
                   Margin="0,0,0,20" />
            
            <!-- Summary Card -->
            <Frame BackgroundColor="LightGray" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                        <Label Text="{Binding TotalDevices}" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                        <Label Text="Total" FontSize="12" HorizontalTextAlignment="Center" />
                    </StackLayout>
                    
                    <StackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                        <Label Text="{Binding FilteredDevices}" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="Green" />
                        <Label Text="Protected" FontSize="12" HorizontalTextAlignment="Center" />
                    </StackLayout>
                    
                    <StackLayout Grid.Row="0" Grid.Column="2" HorizontalOptions="Center">
                        <Label Text="{Binding UnfilteredDevices}" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="Orange" />
                        <Label Text="Unprotected" FontSize="12" HorizontalTextAlignment="Center" />
                    </StackLayout>
                </Grid>
            </Frame>
            
            <!-- Refresh Button -->
            <Button Text="Refresh Devices" 
                    Command="{Binding RefreshCommand}" 
                    Margin="0,0,0,20" />
            
            <!-- Device List -->
            <CollectionView ItemsSource="{Binding ConnectedDevices}" 
                          BackgroundColor="Transparent"
                          x:DataType="local:DevicesPage">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ConnectedDevice">
                        <Grid Padding="15" Margin="0,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <Frame Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                                   BackgroundColor="White" 
                                   Padding="15"
                                   HasShadow="True">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding DeviceName}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" />
                                    
                                    <Switch Grid.Row="0" Grid.Column="1"
                                            IsToggled="{Binding IsFiltered}"
                                            VerticalOptions="Center" />
                                    
                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{Binding IpAddress}" 
                                           FontSize="14" 
                                           TextColor="Gray" />
                                    
                                    <Label Grid.Row="1" Grid.Column="1"
                                           Text="{Binding FilterStatus}" 
                                           FontSize="12" 
                                           TextColor="{Binding FilterStatusColor}"
                                           VerticalTextAlignment="Center" />
                                    
                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="{Binding MacAddress}" 
                                           FontSize="12" 
                                           TextColor="Gray" />
                                    
                                    <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding LastSeen, StringFormat='Last seen: {0:MMM dd, yyyy HH:mm}'}" 
                                           FontSize="10" 
                                           TextColor="LightGray" />
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <!-- Empty State -->
            <StackLayout IsVisible="{Binding IsEmpty}" 
                         VerticalOptions="CenterAndExpand" 
                         HorizontalOptions="CenterAndExpand">
                <Label Text="No devices detected" 
                       FontSize="18" 
                       HorizontalTextAlignment="Center" 
                       TextColor="Gray" />
                <Label Text="Make sure devices are connected to your hotspot" 
                       FontSize="14" 
                       HorizontalTextAlignment="Center" 
                       TextColor="Gray"
                       Margin="0,10" />
                <Button Text="Start Hotspot" 
                        Command="{Binding StartHotspotCommand}" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>