{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "Firebase": {
    "ProjectId": "${FIREBASE_PROJECT_ID:-pocketfence-demo}",
    "DatabaseUrl": "${FIREBASE_DATABASE_URL:-https://demo.firebaseio.com/}",
    "ServiceAccountKeyPath": "${FIREBASE_SERVICE_ACCOUNT_KEY_PATH:-firebase-service-account-key.json}",
    "ApiKey": "${FIREBASE_API_KEY:-demo-api-key}",
    "AuthDomain": "${FIREBASE_AUTH_DOMAIN:-demo.firebaseapp.com}",
    "StorageBucket": "${FIREBASE_STORAGE_BUCKET:-demo.appspot.com}",
    "MessagingSenderId": "${FIREBASE_MESSAGING_SENDER_ID:-123456789012}"
  },
  
  "Authentication": {
    "JwtSecret": "${JWT_SECRET:-development-jwt-secret-key-change-in-production}",
    "JwtIssuer": "${JWT_ISSUER:-PocketFence}",
    "JwtAudience": "${JWT_AUDIENCE:-PocketFence-Users}",
    "JwtExpirationMinutes": "${JWT_EXPIRATION_MINUTES:-1440}"
  },
  
  "Stripe": {
    "PublishableKey": "${STRIPE_PUBLISHABLE_KEY:-pk_test_demo_key}",
    "SecretKey": "${STRIPE_SECRET_KEY:-sk_test_demo_key}",
    "WebhookSecret": "${STRIPE_WEBHOOK_SECRET:-whsec_demo_secret}",
    "PriceIds": {
      "BasicMonthly": "${STRIPE_BASIC_MONTHLY_PRICE_ID:-price_demo_basic_monthly}",
      "BasicAnnual": "${STRIPE_BASIC_ANNUAL_PRICE_ID:-price_demo_basic_annual}",
      "PremiumMonthly": "${STRIPE_PREMIUM_MONTHLY_PRICE_ID:-price_demo_premium_monthly}",
      "PremiumAnnual": "${STRIPE_PREMIUM_ANNUAL_PRICE_ID:-price_demo_premium_annual}",
      "PlatinumMonthly": "${STRIPE_PLATINUM_MONTHLY_PRICE_ID:-price_demo_platinum_monthly}",
      "PlatinumAnnual": "${STRIPE_PLATINUM_ANNUAL_PRICE_ID:-price_demo_platinum_annual}",
      "EnterpriseMonthly": "${STRIPE_ENTERPRISE_MONTHLY_PRICE_ID:-price_demo_enterprise_monthly}",
      "EnterpriseAnnual": "${STRIPE_ENTERPRISE_ANNUAL_PRICE_ID:-price_demo_enterprise_annual}"
    }
  },

  "PocketFence": {
    "Features": {
      "HotspotMode": true,
      "ContentFiltering": true,
      "DeviceManagement": true,
      "AIAssistant": true,
      "RealTimeMonitoring": true,
      "GeofencingAlerts": true,
      "BehaviorAnalysis": true,
      "ThreatDetection": true
    },
    "Limits": {
      "MaxDevicesBasic": 1,
      "MaxDevicesFamily": 5,
      "MaxDevicesComplete": 10,
      "MaxDevicesEnterprise": 999
    },
    "API": {
      "RateLimitPerMinute": 100,
      "EnableCors": true,
      "EnableSwagger": true
    },
    "Security": {
      "EnableCSRFProtection": true,
      "EnableSecurityHeaders": true,
      "RequireHttps": false,
      "MaxRequestBodySize": 10485760
    }
  }
}